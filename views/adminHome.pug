<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home - Bibim Bliss</title>
    <link rel="stylesheet" href="/css/adminHome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h2>Bibim Bliss</h2>
            <nav>
                <a href="#">Dashboard</a>
                <a href="#">Orders</a>
                <a href="#">Products</a>
                <a href="#">Categories</a>
                <a href="#">Users</a>
                <a href="#">Reports</a>
                <a href="#">Settings</a>
                <a href="#">Logout</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="header">
                <h1>Welcome, Admin</h1>
                <div class="header-actions">
                    <span class="notification-icon"><i class="fas fa-bell"></i></span>
                    <span class="admin-avatar"><i class="fas fa-user-circle"></i></span>
                </div>
            </header>

            <!-- Dashboard Overview -->
            <section class="dashboard-overview">
                <div class="overview-card">
                    <h3>Total Orders</h3>
                    <p>350</p>
                </div>
                <div class="overview-card">
                    <h3>Total Revenue</h3>
                    <p>$12,500</p>
                </div>
                <div class="overview-card">
                    <h3>New Users</h3>
                    <p>78</p>
                </div>
                <div class="overview-card">
                    <h3>Products in Stock</h3>
                    <p>150</p>
                </div>
            </section>

            <!-- Analytics Section -->
            <section class="analytics">
                <div class="analytics-card">
                    <h3>Daily Sales</h3>
                    <p>1,200 Sales</p>
                </div>
                <div class="analytics-card">
                    <h3>Customer Feedback</h3>
                    <p>Positive: 95%</p>
                </div>
                <div class="analytics-card">
                    <h3>Monthly Revenue</h3>
                    <p>$45,000</p>
                </div>
            </section>

            <!-- Recent Activity Section -->
            <section class="recent-activity">
                <h2>Recent Activity</h2>
                <ul>
                    <li>Order #1234 placed by John Doe</li>
                    <li>Product "Bibim Stew" added to inventory</li>
                    <li>User "Jane Smith" registered</li>
                </ul>
            </section>

            <!-- Recent Orders Table -->
            <section class="recent-orders">
                <h2>Recent Orders</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Status</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1234</td>
                            <td>John Doe</td>
                            <td>Bibim Stew</td>
                            <td>Shipped</td>
                            <td>₹820</td>
                        </tr>
                        <tr>
                            <td>1235</td>
                            <td>Jane Smith</td>
                            <td>Bibim Soup</td>
                            <td>Pending</td>
                            <td>₹950</td>
                        </tr>
                        <tr>
                            <td>1236</td>
                            <td>Bob Johnson</td>
                            <td>Bibim Rice Soup</td>
                            <td>Delivered</td>
                            <td>₹900</td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Quick Actions -->
            <section class="quick-actions">
                <button>Add New Product</button>
                <button>Manage Orders</button>
                <button>View Reports</button>
            </section>
        </div>
    </div>
</body>
</html>







